@model AgendaTelefonica.Models.ViewModels.NewContactsViewModel 
@{
    ViewBag.Title = "Nuevo contacto";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="row" style="text-align:right;padding:5px;">
        <a href="~/Contactos" class="btn btn-primary">Salir</a>
    </div>

    @using (Html.BeginForm("Nuevo", "Contactos", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(d => d.Nombre)
                    @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "alert-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Telefono)
                    @Html.TextBoxFor(d => d.Telefono, "", new { @class = "form-control", maxlength = "10", pattern = "[0-9]{10}" })
                    @Html.ValidationMessageFor(d => d.Telefono, null, new { @class = "alert-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Email)
                    @Html.TextBoxFor(d => d.Email, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.Email, null, new { @class = "alert-danger" })
                </div>
                &nbsp;
                <div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    }
</div>